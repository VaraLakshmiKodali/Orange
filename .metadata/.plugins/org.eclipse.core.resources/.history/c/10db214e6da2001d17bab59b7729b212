		excelFile.setCellValue(rowIndex, 14, array[0][0]);
		excelFile.setCellValue(rowIndex, 15, array[0][1]);
		excelFile.setCellValue(rowIndex, 16, array[0][2]);
		excelFile.setCellValue(rowIndex, 14, array[1][0]);
