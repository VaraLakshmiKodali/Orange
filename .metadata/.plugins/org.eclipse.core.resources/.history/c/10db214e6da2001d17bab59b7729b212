		excelFile.saveExcelData();
				
	}
	
	@Test(priority=3)
	private void validateHomePage() throws IOException 
	{
		
		By adminLocator=By.id(property.getProperty("adminProperty"));
		WebElement admin=driver.findElement(adminLocator);
		String actualAdminText=admin.getText();
		excelFile.setCellValue(1, 9, actualAdminText);
		
		String expectedAdminText=excelFile.getCellValue(1, 8);
		if(actualAdminText.equals(expectedAdminText))
		{
			
			Log.info("Successfully Navigated to the OrangeHRM Application HomePage - Pass");
			excelFile.setCellValue(1, 10, "Successfully Navigated to the OrangeHRM Application HomePage - Pass");
			
		}
		else
		{
			
			Log.info("Failed Navigate to the OrangeHRM Application HomePage - Fail");
			excelFile.setCellValue(1, 10, "Failed Navigate to the OrangeHRM Application HomePage - Fail");
		}
		 excelFile.saveExcelData();
	}
	

